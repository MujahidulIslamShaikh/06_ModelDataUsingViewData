@model ModelDataUsingViewData.Models.Student;
@{
    ViewData["Title"] = "StudentForm";
}


<div class="container">
<h1>StudentForm</h1>
    <div class="row">
        <div class="col-sm-4">
            <form class="d-grid gap-1" asp-controller="Home" asp-action="StudentForm" method="post" >
                <label asp-for="Name">Enter Name: </label>
                <input asp-for="Name" class="form-control" placeholder="Name" />
                <span asp-validation-for="Name"></span>
                <select asp-for="Gender" asp-items="Html.GetEnumSelectList<Gender>()" class="form-control">
                    <option value="">Select Gender</option>
                </select>
                <input asp-for="Age" class="form-control" placeholder="Age" />
                <input asp-for="Designation" class="form-control" placeholder="Designation" />
                <input asp-for="Salary" class="form-control" placeholder="Salary" />
                <label>Married</label>
                <div class="form-check">
                    <input asp-for="Married" value="Yes" class="form-check-input" type="radio" >
                    <label class="form-check-label" for="flexRadioDefault1">
                        Yes
                    </label>
                </div>
                <div class="form-check">
                    <input asp-for="Married" value="No" class="form-check-input" type="radio">
                    <label class="form-check-label" for="flexRadioDefault2">
                        No
                    </label>
                </div>
                <textarea asp-for="Description" class="form-control" placeholder="Enter Description" rows="5"></textarea>
                <br />
                <input type="submit" value="submit" class="btn btn-outline-primary" />
            </form>
        </div>
    </div>
</div>

